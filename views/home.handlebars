<h1 class="title"> Here we have all the students</h1>

{{#each students}}

  <div class="student-container">
    <h2>Name: <a href="/students/student/{{this.id}}">{{this.name}}</a></h2>
    <h2>E-mail: {{this.email}}</h2>

    <div class="fucntions">
      <form action="/students/delete" method="post">
        <input type="hidden" name="id" value="{{this.id}}" />
        <div class="delete-btn">
          <input type="submit" value="Deletar" />
        </div>

      </form>
      <a
        class="functions-btn"
        href="/students/studentEdit/{{this.id}}"
      >Editar</a>
    </div>

  </div>

{{/each}}